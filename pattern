
// Loop through each row from 1 to 5
for (var i = 1; i <= 5; i++) {
    var pattern = ''; // Initialize an empty string for the current row's pattern

    // Loop to add the appropriate number of asterisks for the current row
    for (var j = 1; j <= i; j++) {
        pattern += '*'; // Add an asterisk to the pattern
    }

    // Print the current row's pattern
    console.log(pattern);
}
